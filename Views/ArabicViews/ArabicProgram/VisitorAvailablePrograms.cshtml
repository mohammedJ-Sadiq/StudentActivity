@model IEnumerable<StudentActivity.Models.Program>

@{
    ViewBag.Title = "VisitorAvailablePrograms";
    Layout = "~/Views/Shared/ArabicLayout/_ArabicLayout.cshtml";

    <div>
        <ul class="breadcrumb">
            <li>@Html.ActionLink(StudentActivity.Resources.Language.Home, "Index", "Home")</li>
            <li>@Html.ActionLink(StudentActivity.Resources.Language.Available_Programs, "VisitorAvailablePrograms", "Program")</li>
        </ul>
    </div>
}

@if (!Model.Any())
{
    @*<div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">*@
    <h1>@StudentActivity.Resources.Language.No_available_programs</h1>
    @*</div>*@
}

else
{
    @*<div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">*@
    <h2>@StudentActivity.Resources.Language.Choose_a_program_to_register</h2>
    @*</div>*@
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @StudentActivity.Resources.Language.Title
            </th>
            <th>
                @StudentActivity.Resources.Language.Time
            </th>
            <th>
                @StudentActivity.Resources.Language.StartDate
            </th>
            <th>
                @StudentActivity.Resources.Language.EndDate
            </th>
            <th>
                @StudentActivity.Resources.Language.MaximumStudentNumber
            </th>
            <th>
                @StudentActivity.Resources.Language.Club_Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    @item.MaximumStudentNumber
                </td>
                <td>
                    @item.Club.Name
                </td>
                <td>
                    @Html.ActionLink(@StudentActivity.Resources.Language.Details, "VisitorProgramDetails", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>

}