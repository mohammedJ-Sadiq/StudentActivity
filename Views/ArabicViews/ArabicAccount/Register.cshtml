@model StudentActivity.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/ArabicLayout/_ArabicLayout.cshtml";
}

<h2></h2>

@using (Html.BeginForm("Register", "Account", new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<h4>@StudentActivity.Resources.Language.Create_a_new_account_</h4>
    <hr />
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @StudentActivity.Resources.Language.Student_Id
        @Html.TextBoxFor(m => m.StudentId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @StudentActivity.Resources.Language.Student_Name
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @StudentActivity.Resources.Language.MobileNo
        @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @StudentActivity.Resources.Language.Email
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @StudentActivity.Resources.Language.Password
        @Html.PasswordFor(m => m.Password ,new { @class = "form-control", @placeholder = "Require capital letter, symbol and degit" })
    </div>
    <div class="form-group">
        @StudentActivity.Resources.Language.ConfirmPassword
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">
        @StudentActivity.Resources.Language.Save
    </button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
