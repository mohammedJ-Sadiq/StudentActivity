@model IEnumerable<StudentActivity.Models.Student_Club>

@if (User.IsInRole("CanManageClubs"))
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/EnglishLayout/_EnglishClubCorLayout.cshtml";
}
else
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/EnglishLayout/_EnglishStudentLayout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("+ " + StudentActivity.Resources.Language.Join_Club, "AddStuClubs", "Club", new { @class = "btn btn-blue btn-left" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @StudentActivity.Resources.Language.Club_Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Club.Name
            </td>
            <td>
                @Html.ActionLink(StudentActivity.Resources.Language.Leave_Club, "DeleteStuClub", "EnglishClub", new { studentId = item.StudentId, clubId = item.ClubId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>