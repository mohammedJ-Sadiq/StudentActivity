<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Student activities</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(" ", "AdminHome", "Home", new { area = "" }, new { @class = "navbar-brand fas fa-home fa-lg fa-2x" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(StudentActivity.Resources.Language.Available_Programs, "Index", "Program")</li>
                <li>@Html.ActionLink(StudentActivity.Resources.Language.FinishedPrograms, "RegisteredPrograms", "Program")</li>
                <li>@Html.ActionLink(StudentActivity.Resources.Language.Clubs, "Index", "Club")</li>
                <li>@Html.ActionLink(StudentActivity.Resources.Language.Requested_Programs, "RequestedProgramsAdmin", "Program")</li>
                @*<li>@Html.ActionLink(StudentActivity.Resources.Language.AllPrograms, "Index", "Program")</li>*@
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink(StudentActivity.Resources.Language.Log_Off, "LogOff", "Account")</li>
                <li>@Html.ActionLink("عربي", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString(), new { language = "ar", id= Url.RequestContext.RouteData.Values["id"]}, null)</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>