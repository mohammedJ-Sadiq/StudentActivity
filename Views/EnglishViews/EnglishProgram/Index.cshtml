@model IEnumerable<StudentActivity.Models.Program>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/EnglishLayout/_EnglishAdminLayout.cshtml";

    <div>
        <ul class="breadcrumb">
            <li>@Html.ActionLink(StudentActivity.Resources.Language.Home, "AdminHome", "Home")</li>
            <li>@Html.ActionLink(StudentActivity.Resources.Language.Programs, "Index", "Program")</li>
        </ul>
    </div>
}

<h2></h2>

<p>
    @Html.ActionLink("+ " + @StudentActivity.Resources.Language.Add_New_Program, "addProgram", "Program", "Program", new { @class = "btn  btn-blue btn-left" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @StudentActivity.Resources.Language.Title
        </th>
        <th>
            @StudentActivity.Resources.Language.Time
        </th>
        <th>
            @StudentActivity.Resources.Language.StartDate
        </th>
        <th>
            @StudentActivity.Resources.Language.EndDate
        </th>
        <th>
            @StudentActivity.Resources.Language.MaximumStudentNumber
        </th>
        <th>
            @StudentActivity.Resources.Language.Club_Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Time
            </td>
            <td>
                @item.StartDate
            </td>
            <td>
                @item.EndDate
            </td>
            <td>
                @item.MaximumStudentNumber
            </td>
            <td>
                @item.Club.Name
            </td>
            <td>
                @Html.ActionLink(@StudentActivity.Resources.Language.Edit, "EditProgram", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink(@StudentActivity.Resources.Language.Details, "ProgramDetails", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink(@StudentActivity.Resources.Language.Delete, "DeleteProgram", "Program", new { id = item.Id }, new{ @class = "btn btn-primary",
                onclick = "return confirm('Are you sure you want to delete this program?')" })
            </td>
        </tr>
    }

</table>
