

@model IEnumerable<StudentActivity.Models.Program>

@{
    ViewBag.Title = "Programs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Registered Programs</h2>


<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumStudentNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Club.Name)
        </th>
        <th></th>

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @item.Title
    </td>
    <td>
        @item.Time
    </td>
    <td>
        @item.StartDate
    </td>
    <td>
        @item.EndDate
    </td>
    <td>
        @item.MaximumStudentNumber
    </td>
    <td>
        @item.Club.Name
    </td>
    <td>
        @Html.ActionLink("Students List", "EligibleList", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
    </td>

</tr>
}

</table>
