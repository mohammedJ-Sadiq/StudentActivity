@model IEnumerable<StudentActivity.Models.Program>
@if (User.IsInRole("CanManageClubs"))
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_ClubCorLayout.cshtml";

    <h2></h2>
    <p>
        @Html.ActionLink("+ Request Program", "RequestProgram", "Program", new { @class = "btn  btn-blue btn-left" })
    </p>

}
else if(User.IsInRole("CanManagePrograms"))
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
@if (!Model.Any())
{
    <h2>There Are no pending programs</h2>
}

else
{
    <h2>Pending Programs</h2>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumStudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    @item.MaximumStudentNumber
                </td>
                <td>
                    @item.Club.Name
                </td>
                @if (User.IsInRole("CanManagePrograms"))
                {
                    <td>
                        @Html.ActionLink("Approve", "ApproveProgram", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Reject", "RejectProgram", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </td>
                }
                
            </tr>
        }

    </table>
}
