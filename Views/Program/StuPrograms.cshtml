@model IEnumerable<StudentActivity.Models.Student_Program>

@if (User.IsInRole("CanManageClubs"))
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_ClubCorLayout.cshtml";
}
else
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@if (!Model.Any())
{
    <h1>There are no programs registered yet !</h1>
}

else
{
    <h2>Registered Programs</h2>
    <h2></h2>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Program.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program.Club.Name)
            </th>
            <th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.Club.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "ProgramDetails", "Program", new { id = item.ProgramId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteStuPrg", "Program", new { studentId = item.StudentId, programId = item.ProgramId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </table>
}