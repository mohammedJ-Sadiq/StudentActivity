@model IEnumerable<StudentActivity.Models.Program>
@{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2></h2>
@if (!Model.Any())
{
    <h1>There are no student registered in this program</h1>
}

else
{
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumStudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    @item.MaximumStudentNumber
                </td>
                <td>
                    @item.Club.Name
                </td>
                <td>
                    @Html.ActionLink("Details", "ProgramDetailsStudent", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Register", "Registration", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>

}