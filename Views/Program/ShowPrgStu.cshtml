@model IEnumerable<StudentActivity.Models.Program>

@if (User.IsInRole("CanManageClubs"))
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_ClubCorLayout.cshtml";
}
else
{
    ViewBag.Title = "ShowPrgStu";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
@if (!Model.Any())
{
    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
        <h1>There are no available programs!</h1>
        <br />
    </div>
    
}

else
{
    <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
        <h2 >Choose a program to register in</h2>
        <br />
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumStudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
                <td>
                    @item.MaximumStudentNumber
                </td>
                <td>
                    @item.Club.Name
                </td>
                <td>
                    @Html.ActionLink("Details", "ProgramDetails", "Program", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Register", "Registration", "Program", new { programId = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>

}